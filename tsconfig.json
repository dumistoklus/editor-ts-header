{
  "compilerOptions": {
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "target": "ES2017",
    "module": "ES6"
  },
  "include": [
    "./src/**/*"
  ]
}
